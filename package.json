{
  "name": "white-label-ai-chatbot-platform",
  "version": "1.0.0",
  "private": true,
  "description": "White-Label AI Chatbot Platform MVP - A monorepo containing backend, crawler, and frontend services",
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm --parallel -r dev",
    "build": "pnpm -r build",
    "start": "pnpm -r start",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "install:all": "pnpm install",
    "backend:dev": "pnpm --filter backend dev",
    "crawler:dev": "pnpm --filter crawler dev", 
    "frontend:dev": "pnpm --filter frontend dev"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.1.3"
  }
}
